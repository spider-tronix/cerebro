<?xml version="1.0" ?>
<robot name="Cerebroarm" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:property name="pi" value="3.1415926535897931"/>
<xacro:property name="r1" value="0.06"/>
<xacro:property name="l1" value="0.30"/>
<xacro:property name="l2" value="0.40"/>
<xacro:property name="m" value="1"/>
<xacro:property name="a" value="0.50"/>

<link name="world"/>

<joint name="fixed" type="fixed">
    <parent link="world"/>
    <child  link="base_plate"/>
</joint>

<link name="base_plate">
    <inertial>
        <mass value="${m}"/>
        <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
        <inertia ixx="0.020833" iyy="0.020833" izz="0.041667" iyz="0.0" ixz="0.0" ixy="0.0"/>    
    </inertial>

    <visual>
        <origin xyz="0 0 0.025" rpy="0.0 0.0 0.0"/>
          <geometry>
              <box size="${a} ${a} 0.05"/>
          </geometry>  
    </visual>
</link>

<joint name="plate_basecyl" type="continuous">
    <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
    <parent link="base_plate"/>
    <child link="base_cylinder"/>
    <axis xyz="0.0 1.0 0.0"/>
</joint>

<link name="base_cylinder">
    <inertial>
        <mass value="${m}"/>
        <origin xyz="0 0 ${0.05+l1/2}" rpy="0.0 0.0 0.0"/>
        <inertia ixx="${m/3.0*l1*l1}" iyy="${m/3.0*l1*l1}" izz="${m/2*r1*r1}" iyz="0.0" ixz="0.0" ixy="0.0" />    
    </inertial>

    <visual>
        <origin xyz="0 0 ${l1/2}" rpy="0.0 0.0 0.0"/>
          <geometry>
              <cylinder radius="${r1}" length="${l1}"/>
          </geometry>  
    </visual>
</link>

<link name="base_cylinder1">
    <inertial>
        <mass value="${m}"/>
        <origin xyz="0 0 ${0.05+1.5*l1}" rpy="0.0 0.0 0.0"/>
        <inertia ixx="${m/3.0*l1*l1}" iyy="${m/3.0*l1*l1}" izz="${m/2*r1*r1}" iyz="0.0" ixz="0.0" ixy="0.0" />    
    </inertial>

    <visual>
        <origin xyz="0 0 ${l1/2}" rpy="0.0 0.0 0.0"/>
          <geometry>
              <cylinder radius="${r1}" length="${l1}"/>
          </geometry>  
    </visual>
</link>

<joint name="basecyl_zaxis" type="continuous">
    <origin xyz="0.0 0.0 ${l1}" rpy="0.0 0.0 0.0"/>
    <parent link="base_cylinder"/>
    <child link="base_cylinder1"/>
    <axis xyz="0.0 0.0 1.0"/>
</joint>

<link name="base_cylinder2">
    <inertial>
        <mass value="${m}"/>
        <origin xyz="0 0 ${0.05+2*l1+0.5*l2}" rpy="0.0 0.0 0.0"/>
        <inertia ixx="${m/3.0*l1*l1}" iyy="${m/3.0*l1*l1}" izz="${m/2*r1*r1}" iyz="0.0" ixz="0.0" ixy="0.0" />    
    </inertial>

    <visual>
        <origin xyz="0 0 ${l2/2+l1/2-0.05}" rpy="0.0 0.0 0.0"/>
          <geometry>
              <cylinder radius="${r1}" length="${l1}"/>
          </geometry>  
    </visual>
</link>

<joint name="basecyl_zaxis1" type="continuous">
    <origin xyz="0.0 0.0 ${l1}" rpy="0.0 0.0 0.0"/>
    <parent link="base_cylinder1"/>
    <child link="base_cylinder2"/>
    <axis xyz="1.0 0.0 0.0"/>
</joint>

<link name="gripper">
    <inertial>
        <mass value="${m}"/>
        <origin xyz="0 0 ${0.05+2*l1+0.5*l2}" rpy="${pi/2} 0.0 0.0"/>
        <inertia ixx="${m/3.0*l1*l1}" iyy="${m/3.0*l1*l1}" izz="${m/2*r1*r1}" iyz="0.0" ixz="0.0" ixy="0.0" />    
    </inertial>

    <visual>
        <origin xyz="0 0 ${l2/2+l1/2-0.05}" rpy="0.0 0.0 0.0"/>
          <geometry>
              <cylinder radius="${r1}" length="${l1}"/>
          </geometry>  
    </visual>
</link>

<joint name="basecyl_zaxis2" type="continuous">
    <origin xyz="0.0 0.0 ${l1}" rpy="0.0 0.0 0.0"/>
    <parent link="base_cylinder2"/>
    <child link="gripper"/>
    <axis xyz="1.0 0.0 0.0"/>
</joint>
</robot>